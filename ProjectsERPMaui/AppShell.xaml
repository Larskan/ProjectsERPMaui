<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectsERPMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjectsERPMaui.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <ShellContent x:Name="Logout" Title="Logout" Icon="logout.png" ContentTemplate="{DataTemplate local:LoginView}" />

        
            <ShellContent x:Name="Start" Title="Start" Icon="home.png" ContentTemplate="{DataTemplate local:StartView}" IsVisible="True"/>
            <ShellContent x:Name="Project" Title="Project" Icon="blueprint.png" ContentTemplate="{DataTemplate local:ProjectView}"/>
            <ShellContent x:Name="Task" Title="Task" Icon="checklist.png" ContentTemplate="{DataTemplate local:TaskView}" />
        
    </TabBar>

</Shell>
