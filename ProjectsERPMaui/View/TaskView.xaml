<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectsERPMaui.View.TaskView"
             xmlns:viwModel="clr-namespace:ProjectsERPMaui.ViewModel"
             x:DataType="viwModel:TaskViewModel"
             xmlns:model="clr-namespace:ProjectsERPMaui.Model"
             Title="TaskView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to Task Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Style="{StaticResource ButtonOutline}" Text="Go to Login" Command="{Binding GoToLoginPageCommand}"/>
    </VerticalStackLayout>
</ContentPage>