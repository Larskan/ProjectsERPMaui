<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectsERPMaui.View.StartView"
             xmlns:viewModel="clr-namespace:ProjectsERPMaui.ViewModel"
             x:DataType="viewModel:StartViewModel"
             xmlns:model="clr-namespace:ProjectsERPMaui.Model"
             Title="Start Page"
             Shell.NavBarIsVisible="True">
    <VerticalStackLayout>
        <Label Style="{StaticResource BaseLabel}" Text="{Binding Employee.FirstName}"/>
        <Label Style="{StaticResource BaseLabel}" Text="{Binding Employee.LastName}"/>
        <Label Style="{StaticResource BaseLabel}" Text="{Binding Employee.EmpID}"/>
        <Label Style="{StaticResource BaseLabel}" Text="{Binding Employee.Boolean}"/>
        <!--<Button Style="{StaticResource ButtonOutline}" Text="Go to project" Command="{Binding GoToProjectPageCommand}"/>-->
    </VerticalStackLayout>
</ContentPage>